<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/light_status_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/light_status_icon"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:contentDescription="@string/luminosity_intensity"
        app:layout_constraintBottom_toTopOf="@+id/light_status_lux"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_luminosity" />

    <TextView
        android:id="@+id/light_status_lux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70.0"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light_status_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>